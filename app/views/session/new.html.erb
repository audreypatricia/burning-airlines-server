<h1 id="sign_in_form">Log In</h1>

<%= form_tag login_path do %>
<%# error message for signin form %>
<% if flash[:error_message] %>
  <h2 id="sign_in_form"><%= flash[:error_message] %></h2>
<% end %>

<div class="form-group" id="sign_in_form">
  <%= label_tag :username%>
  <%= text_field_tag :username, nil, :class=> 'form-control' %>
</div>

<div class="form-group" id="sign_in_form">
  <%= label_tag :password %>
  <%= password_field_tag :password, nil, :class=> 'form-control' %>
</div>

<div id="sign_in_form">
  <%= submit_tag "Sign In", :class=>"btn btn-primary"%>
  <%= "Dont't have an account? " %><%= link_to "Register now", new_user_path %>
</div>
<% end %>
